pipeline {
   agent any
   stages {
       stage('Build') {
           steps {
               echo 'Building the applications'
           }
       }
       stage('Test') {
           steps {
               echo 'Running tests'
           }
       }
       stage('Deploy') {
           steps {
               echo 'Deploying the application'
           }
       }
   }
   post {
       always {
           echo 'Pipeline execution completed'
       }
       success {
           echo 'Build succeeded!'
       }
       failure {
           echo 'Build failed!'
       }
   }
}
